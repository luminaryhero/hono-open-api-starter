{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  }
}
